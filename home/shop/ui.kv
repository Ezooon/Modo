#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<ShopTap>:
    name: "shop"
    icon: "shopping-outline"
    text: "Shop"
    TopScrollView:
        do_scroll_x: False
        effect_cls: ScrollEffect
        MDGridLayout:
            id: displays
            cols: 1
            spacing: dp(10)
            orientation: "lr-tb"
            adaptive_height: True
            MDBoxLayout:
                size_hint: 1, None
                height: dp(50)
                padding: dp(20), dp(20), dp(20), 0
                MDTextField:
                    mode: "round"
                    size_hint: 0.1, None
                    height: dp(50)
                    hint_text: "Search"
                    icon_right: "magnify"
                    halign: "right"
                    line_color_normal: 1,1,1,0
                    line_color_focus: 1,1,1,0
                    pos_hint: {"center_y": 0.5}

