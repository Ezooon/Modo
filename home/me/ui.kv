#:import OneLineIconItem uix.OneLineIconItem
#:import Gradient kivy_gradient.Gradient


<MeTap>:
    name: "me"
    icon: "face-woman-shimmer"
    text: "Me"
	MDBoxLayout:
		size_hint: 1, 1
		orientation: 'vertical'
        MDBoxLayout:
            size_hint: 1, 0.4
            pos_hint: {'top': 1}
            padding: dp(20)
            spacing: dp(30)
            background: 'assets/Modo Logo.jpg'
            md_bg_color: 1, 1, 1, 1
            radius: [0, 0, dp(20), dp(20)]
            canvas:
                Color:
                    rgba: rgba('#11111100')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, dp(18), dp(18)]


                Color:
                    rgba: rgba('#ffffff')
                RoundedRectangle:
                    pos: self.x, self.y + dp(2)
                    size: self.size
                    radius: [0, 0, dp(20), dp(20)]
                    texture: Gradient.horizontal(rgba("#FFD70050"), rgba("#11111160"))# self.theme_cls.bg_normal)

            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {'center_y': 0.5}
                adaptive_height: True
                MDLabel:
                    text: "Fulana Al Fulania"
                    halign: 'right'
                    size_hint: 1, None
                    height: dp(50)
                    color: self.theme_cls.text_color
                MDLabel:
                    text: "fulania@gmail.com"
                    halign: 'right'
                    color: self.theme_cls.text_color
                    size_hint: 1, None
                    height: dp(50)
            FitImage:
                source: "assets/accout.jpg"
                size_hint: None, .9
                radius: self.height/2
                pos_hint: {'center_y': 0.5}
                width: self.height
                canvas.after:
                    Color:
                        rgba: rgba("#FFD700")
                    Line:
                        width: dp(2)
                        circle: self.center_x, self.center_y, self.height/2

    	MDList:
    	    size_hint: 1, 1
            OneLineIconItem:
                text: "History"
                icon: "history"
            OneLineIconItem:
                text: "Liked"
                icon: "heart"
            OneLineIconItem:
                text: "Settings"
                icon: "cog-outline"
            OneLineIconItem:
                text: "About"
                icon: "information-outline"


    MDIconButton:
        icon: 'pencil'
        theme_text_color: "Custom"
        icon_color: 0,0,0,1
        pos_hint: {"top": 1}
        

