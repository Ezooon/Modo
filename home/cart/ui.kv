<CartTap>:
    icon: "cart-outline"
    text: "Cart"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: self.theme_cls.bg_light
        background: "assets/leather.jpg"
        MDBoxLayout:
            id: toolbar
            size_hint: 1, None
            height: dp(60)
            md_bg_color: self.theme_cls.bg_dark
            padding: dp(5)
            spacing: dp(10)
            MDLabel:
                text: "Carting"
                halign: "right"
            MDIconButton:
                icon: "history"
            MDIconButton:
                icon: "message-text-outline"
        ScrollView:
            id: cart_list
            size_hint: 1, 1
            MDGridLayout:
                id: items_list
                spacing: dp(5)
                padding: dp(5)
                cols: 1
                adaptive_height: True

    MDBoxLayout:
        id: total_box
        size_hint: 1, None
        y: 0
        height: dp(48)
        md_bg_color: "#BCC6CC40"
        radius: dp(25), dp(25), 0, 0
        MDLabel:
            id: total
            text: str(sum([child.price * child.amount for child in items_list.children])) + " SDG"
            halign: "center"
            color: self.theme_cls.opposite_text_color
        MDLabel:
            id: num_of_items
            text: str(len(items_list.children))
            halign: "center"
            color: self.theme_cls.opposite_text_color
        MDIconButton:
            icon: "send"
            theme_icon_color: "Custom"
            icon_color: rgba("#ffd700")

    MDCard:
        id: amount_box
        size_hint: 1, None
        height: dp(30)
        top: total.y
        md_bg_color: self.theme_cls.bg_darkest
        radius: 0, 0, dp(15), dp(15)
        MDIconButton:
            size_hint: 1, 1
            icon: "plus"
            md_bg_color: 0, 1, 0, 1
            on_release:
                if root.focused_item.amount < root.focused_item.item.stock: root.focused_item.amount += 1
                total.text = str(sum([child.price * child.amount for child in items_list.children])) + " SDG"
                amount_label.text = "X" + str(root.focused_item.amount)
        MDLabel:
            id: amount_label
            size_hint: 1, 1
            text: "no item"
            halign: "center"
            text_color: 0,0,0,1
        MDIconButton:
            size_hint: 1, 1
            icon: "minus"
            md_bg_color: 1, 0, 0, 1
            on_release:
                if root.focused_item.amount > 0: root.focused_item.amount -= 1
                total.text = str(sum([child.price * child.amount for child in items_list.children])) + " SDG"
                amount_label.text = "X" + str(root.focused_item.amount)

